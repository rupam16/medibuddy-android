<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/linearLayout1"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#FFFFF0">
	<TextView
		android:layout_height="wrap_content"
		android:id="@+id/textView1"
		android:layout_width="match_parent"
		android:gravity="center_horizontal"
		android:text="Ask Your question about"
		android:textSize="24dip"
		android:background="@drawable/title_bar_blue"
		android:textColor="#ffffff"
		android:paddingTop="20dip"></TextView>
	<EditText
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/editText1"
		android:hint="Write your question here"></EditText>
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:id="@+id/linearLayout2">
		<Button
			android:layout_width="wrap_content"
			android:id="@+id/post_ques_button"
			android:layout_height="wrap_content"
			android:text="Post"
			android:background="@drawable/blue_button_bar"
			android:textColor="#ffffff"></Button>
		<LinearLayout
			android:layout_height="fill_parent"
			android:id="@+id/linearLayout3"
			android:layout_width="fill_parent"
			android:gravity="right">
			<Button
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/cancel_post_button"
				android:text="Cancel"
				android:background="@drawable/blue_button_bar"
				android:textColor="#ffffff"></Button>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>